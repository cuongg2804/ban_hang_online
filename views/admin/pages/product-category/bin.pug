extends  ../../layout/default.pug
include ../../mixins/filter.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
block main
  h1(class="mb-4") Khôi phục danh mục sản phẩm

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +search(keyword)
    
  .card-header Danh sách sản phẩm
    .card-body

    table(class="table table-hover table-sm" )   
      thead
        tr
          th STT
          th Hình ảnh
          th Tiêu đề
          th Hành động

      tbody
        each item,index in records 
          tr 
            td #{index+1}
            td
              img(
                src= item. thumbnail
                alt= item.title
                width="100px"
                height="auto"
              )
            td #{item.title}
            td
              a(class="btn btn-warning btn-sm" 
              href = `recovery/${item.id}`
              recovery id = item.id) Khôi phục
  script(src="/admin/bin.js") 
